{
  "name": "fit-viewer",
  "displayName": "FIT File Viewer",
  "description": "A VSCode extension to preview .fit files",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomascamminady/fit-viewer"
  },
  "icon": "icon.png",
  "publisher": "thomascamminady",
  "author": "Thomas Camminady",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "fitViewer.fitEditor",
        "displayName": "FIT File Viewer",
        "selector": [
          {
            "filenamePattern": "*.fit"
          }
        ]
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./ && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 media/* out/media/",
    "package": "vsce package",
    "build": "electron-builder --projectDir=electron-app"
  },
  "build": {
    "directories": {
      "app": "electron-app",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/vscode": "^1.99.1",
    "@vscode/vsce": "^3.3.2",
    "copyfiles": "^2.4.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@garmin/fitsdk": "^21.170.0",
    "arquero": "^8.0.1"
  }
}
