{
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run vitest in electron-app",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/electron-app"
            },
            "isBackground": false,
            "problemMatcher": ["$eslint-stylish"],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}
